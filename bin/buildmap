#!/usr/bin/env sh
set -eux

mod="criticaldynamics"
map="$mod/maps/$1"
mapname="${1%.*}"
bsp="$mod/maps/$mapname.bsp"

fast=0
if [ $# -gt 1 ]; then
    if [ "$2" = "-fast" ]; then
        fast=1
    fi
fi

(
# Ensure we're in the real HL parent directory for this as compile tools look
# for WADs relative to this path.
cd "$(dirname "$(realpath "$0")")/../.."

goldutil map-export "$mod/mapssrc/$1" > "$map"

grep -q __TB_empty "$map" && (
    echo "__TB_empty found in $map" 1>&2
    if [ $fast -eq 1 ]; then
        sed -i 's/__TB_empty/missing/' "$map"
    else
        exit 1
    fi
)

rm -f -- "$bsp"

sdHLCSG -cliptype precise "$map"
sdHLBSP "$map"

if [ $fast -eq 1 ]; then
    sdHLVIS -fast "$map"
    sdHLRAD -fast "$map"
else
    sdHLVIS -full "$map"
    sdHLRAD -bounce 32 "$map"
fi
)
