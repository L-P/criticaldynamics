#!/usr/bin/env sh

set -eu

cd "$(dirname "$(realpath "$0")")/.."
modpath="$(pwd)"

# release | debug
RELEASE="${RELEASE:=release}"

(
cd "$CRITICAL_DYNAMICS_SRC/linux"
set -x
CFG=$RELEASE make
cp "$RELEASE/hl.so"* "$modpath/dlls/"
cp "$RELEASE/client.so"* "$modpath/cl_dlls/"
cp "../network/delta.lst" "$modpath/"
)
